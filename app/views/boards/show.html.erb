<% title @board.name %>

<div id="pictures">
  <% for picture in @pictures %>
    <div class="picture">
      <%= image_tag picture.image_url(:thumb).to_s %>
      <div class="name"><%= picture.name %></div>
      <div class="actions">
        <%= link_to "edit", edit_picture_path(picture) %> |
        <%= link_to "remove", picture, :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>

<p>
  <%= link_to "Add a Picture", new_picture_path(:board_id => @board) %> |
  <%= link_to "Remove Board", @board, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View Boards", boards_path %>
</p>
